{
  "publisher": "barbapapazes",
  "name": "fusion-vscode",
  "displayName": "PHP in Vue",
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@10.2.0",
  "description": "Get PHP syntax highlighting in Vue files",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/barbapapazes/fusion-vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.98.0"
  },
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/vue.php.tmLanguage.json",
        "scopeName": "source.vue.php",
        "injectTo": [
          "source.vue"
        ]
      }
    ]
  },
  "scripts": {
    "publish": "vsce publish --no-dependencies",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "npm run lint && bumpp"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.2",
    "eslint": "9.5.0"
  }
}
